{% from 'macros/common.njk' import menu %}

<header id="site-header">

    <div class="container">

        <div class="grid grid-flow-col auto-cols-max justify-between items-center gap-8">

            {% include 'global/brand.njk' %}

            <nav class="hidden lg:block" aria-label="Main DropdownMenu">
                {{ menu({
                    nav: navigation.main,
                    style: 'main',
                    attributes: 'role="menubar"',
                    currentPage: page.url,
                    menuClass: 'is-dropdown flex flex-row space-x-8',
                    parentLiClasses: 'relative flex place-items-center',
                    linkClass: 'text-black',
                    currentlinkClass: 'text-primary',
                    submenuClass: 'absolute top-full invisible pointer-events-none opacity-0 flex flex-col bg-white p-4 shadow space-y-2 transition-opacity duration-500 peer-aria-expanded:visible group-hover:pointer-events-auto group-hover:opacity-100 peer-focus:opacity-100 has-[:focus]:opacity-100 '
                }) }}
            </nav>

            {% include 'global/hamburger.njk' %}

        </div>

    </div>

</header>