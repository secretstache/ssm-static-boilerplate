/**
* @param {string} class
* @param {string} content
*/

{% macro render( props ) %}

    <div class="module text-editor{%if props.class %} {{ props.class }}{% endif %}">

        {% if caller %}

            {{ caller() | safe }}

        {%  else %}

            {% if props.content %}

                {{ props.content | safe }}

            {% endif %}

        {% endif %}

    </div>

{% endmacro %}