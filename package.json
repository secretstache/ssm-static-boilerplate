{
    "name": "ssm-static-boilerplate",
    "version": "3.0.1",
    "author": "Secret Stache Media <rich@secretstache.com>",
    "license": "MIT",
    "vars": {
        "prefix": "/secretstache/ssmv4",
        "project": "default"
    },
    "scripts": {
        "clean": "rimraf dist",
        "start": "cross-env npm-run-all -l clean -p start:*",
        "start:webpack": "cross-env project=$npm_package_vars_project mode=development webpack",
        "start:eleventy": "cross-env prefix= project=$npm_package_vars_project mode=development eleventy --quiet --watch --serve",
        "start:css": "tailwindcss -i src/assets/styles/app.css -o dist/assets/styles/app.css --watch --postcss",
        "build": "cross-env npm-run-all clean build:*",
        "staging-build": "cross-env npm-run-all clean staging-build:*",
        "build:webpack": "cross-env mode=production webpack",
        "build:eleventy": "cross-env prefix=$npm_package_vars_prefix project=$npm_package_vars_project mode=production eleventy --quiet",
        "build:css": "tailwindcss -i src/assets/styles/app.css -o dist/assets/styles/app.css --postcss",
        "staging-build:webpack": "cross-env mode=production webpack",
        "staging-build:eleventy": "cross-env prefix=/static project=$npm_package_vars_project mode=production eleventy --quiet",
        "lint": "npm-run-all lint:js:fix lint:scss:fix",
        "lint:js": "eslint src",
        "lint:js:fix": "yarn lint:js --fix",
        "lint:scss": "npx stylelint src/**/*.scss",
        "lint:scss:fix": "yarn lint:scss --fix",
        "prettier": "npx prettier src --check",
        "prettier:fix": "yarn prettier --write"
    },
    "devDependencies": {
        "@11ty/eleventy": "^2.0.1",
        "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
        "@babel/core": "^7.24.0",
        "@babel/preset-env": "^7.24.0",
        "autoprefixer": "^10.4.18",
        "babel-loader": "^9.1.3",
        "copy-webpack-plugin": "^11.0.0",
        "cross-env": "^7.0.3",
        "css-loader": "^6.10.0",
        "css-minimizer-webpack-plugin": "^5.0.1",
        "eslint": "^8.57.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "fs": "^0.0.1-security",
        "html-prettify": "^1.0.7",
        "js-yaml": "^4.1.0",
        "mini-css-extract-plugin": "^2.8.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.35",
        "postcss-for": "^2.1.1",
        "postcss-import": "15.1.0",
        "postcss-loader": "^7.3.3",
        "postcss-nesting": "^12.1.0",
        "prettier": "^3.2.5",
        "prettier-plugin-jinja-template": "^1.3.3",
        "prettier-plugin-multiline-arrays": "^3.0.4",
        "prettier-plugin-tailwindcss": "^0.5.12",
        "require-glob": "^4.1.0",
        "rimraf": "^5.0.1",
        "sass": "^1.71.1",
        "sass-loader": "^13.3.2",
        "slugify": "^1.6.6",
        "style-loader": "^3.3.4",
        "stylelint": "^15.10.3",
        "stylelint-config-tailwindcss": "^0.0.7",
        "tailwind-merge": "^2.2.1",
        "tailwindcss": "^3.4.1",
        "terser-webpack-plugin": "^5.3.10",
        "webpack": "^5.90.3",
        "webpack-bundle-analyzer": "^4.9.1",
        "webpack-cli": "^5.1.4",
        "webpackbar": "^5.0.2"
    },
    "dependencies": {
        "@splidejs/splide": "^4.1.4",
        "@splidejs/splide-extension-auto-scroll": "^0.5.3",
        "lightgallery": "^2.7.1",
        "plyr": "^3.7.3",
        "slim-select": "^2.8.2"
    },
    "resolutions": {
        "string-width": "^4.2.3"
    }
}
